<% layout('layouts/app') %>

<h1>Add a new place</h1>

<form action="/places" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="place[title]" required>
  </div>

  <div>
    <label for="price">Price:</label>
    <input type="number" id="price" name="place[price]" required>
  </div>

  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="place[description]" required></textarea>
  </div>

  <div>
    <label for="location">Location:</label>
    <input type="text" id="location" name="place[location]" required>
  </div>

  <div>
    <label for="image">Image URL:</label>
    <input type="text" id="image" name="place[image]" required>
  </div>

  <button type="submit">Save</button>
  <a href="/places">Back</a>
</form>
