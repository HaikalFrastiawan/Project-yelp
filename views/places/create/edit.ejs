<% layout ('layouts/app') %>
    <h1>Update place</h1>
    
    <form action="/places/<%= place._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">title:</label>
            <input type="text" id="title" name="place[title]" value="<%= place.title %>">   
        </div>
        <div>
            <label for="price">price:</label>
            <input type="number" id="price" name="place[price]" value="<%= place.price %>">
        </div>
        <div>
            <label for="description">description:</label>
            <textarea id="description" name="place[description]" value="<%= place.description %>"></textarea>
        <div>
            <label for="location">location:</label>
            <input type="text" id="location" name="place[location]" value="<%= place.location %>">
        </div>

        <button type="submit" >Save</button>
        <a href="/places">Back</a>
    </form>
