<% layout('layouts/app') %>
    <h1>All places</h1>
    <a href="/places/create">Add Place</a>
    <ul>

        <% for (const place of places) { %>
           <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= place.image %>" alt="<%= place.title %>" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= place.title %></h5>
                        <p class="card-text"><%= place.description %></p>
                        <p class="card-text">
                            <smal class="text-secondary"><%= place.location %></smal>
                        </p>
                            <a href="/places/<%= place._id %>" class="btn btn-primary">view: <%= place.title %></a>
                      
                    </div>
                </div>
            </div>
           </div>
        <% } %>

    </ul>
 